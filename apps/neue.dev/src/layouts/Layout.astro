---
import "@neue/neue-css/index.css"; 
import '../pollen.css'

import AppShell from  '../components/AppShell.vue'

interface Props {
	title: string;
}
const { title } = Astro.props; 
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body data-theme="example" class="min-h-screen bg-page-base">

		<div class="mx-auto app-wrapper">
			<AppShell>
				<slot></slot>
			</AppShell>
		</div>
	</body>
</html>
<style is:global lang="postcss">
@tailwind components;
@layer components {
	.my-btn {
		@apply btn-base bg-primary-base border-2 button-roundness border-primary-mlt shadow-md; 
	}
  .btn-sm {
    @apply btn-p-sm; 
  }

  .btn-md {
		@apply btn-p-md; 
  }
  .btn-lg {
		@apply btn-p-lg ; 
  }
	.chip {
		@apply btn-chip-p btn-base bg-surface-raised-base; 
  }
	.my-input {
		@apply input-base input-roundness;
	}
	.my-select {
		@apply select-base input-roundness;
	}
	.app-wrapper {
		/* background-image: linear-gradient(
      to bottom right,
      rgba(239, 73, 83, 0.05),
      rgba(239, 174, 73, 0.05)
    ); */

		@apply bg-page-base;
		
	}
	input.nested-input {
    box-shadow: none !important;
    border: none !important;
  }

  .page-heading {
    @apply font-bold text-center pb-2;
  }
	.page-subheading {
    @apply font-bold text-center;
  }
  .page-subheading {
    @apply text-xl font-bold text-center;
  }
  .section-box {
    @apply p-4 neue-rounded border-2 border-neutral-base;
  }
	.page-section {
    @apply p-4 neue-rounded shadow-sm bg-page-base border-surface-base border;
  }

}

</style>
